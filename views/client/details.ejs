<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/user-details.css">

</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
      <% if (errorMessage) { %>
      <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>
    <form class="user-details-form" action="/user/save-changes" method="POST">
          <h1>Profile Settings</h1>
          <div class="form-control">
            <label for="firstName">First Name</label>
              <input class="<%= validationErrors.find(e => e.param === 'firstName' ) ? 'invalid' : '' %>" id="firstName" name="firstName" type="text" value="<%= oldInput.firstName %>">
          </div>
          <div class="form-control">
            <label for="lastName">Last Name</label>
              <input class="<%= validationErrors.find(e => e.param === 'lastName' ) ? 'invalid' : '' %>" type="text" id="lastName" name="lastName" value="<%= oldInput.lastName %>">
          </div>
          <div class="form-control">
            <label for="lastName">E-mail</label>
              <input class="<%= validationErrors.find(e => e.param === 'email' ) ? 'invalid' : '' %>" type="email" id="email" name="email" value="<%= oldInput.email %>">
          </div>
          <div class="form-control">
            <label for="address">Address</label>
              <input class="<%= validationErrors.find(e => e.param === 'address' ) ? 'invalid' : '' %>" type="text" id="address" name="address" value="<%= oldInput.address %>">
          </div>
          <button class="btn" type="submit">Save Changes</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>
